<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @blog_post.title %>
  </div>
  <div class="panel-body">
    <p><%= @blog_post.user.username %></p>
    <p><%= time_ago_in_words(@blog_post.created_at) %> ago</p>
    <p><%= @blog_post.blog_entry %></p>
  </div>
  <div class="panel-footer">
    <% if user_signed_in? && current_user.id == @blog_post.user_id %>
    <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "btn btn- warning" %>
    <% end %>
    <%= link_to "All Blog Posts", blog_posts_path, class: "btn btn-default" %>
  </div>
  <div class="panel panel-success">
    <div class="panel-heading">
      Make a Comment....
    </div>
    <div class="panel-body">
      <% if user_signed_in? %>
      <%= render 'comments/form' %>
      <% else %>
      <p> <%= link_to "Sign In to Comment", new_user_session_path %> </p>
      <% end %>
    </div>
  </div>
  <div class="panel panel-success">
    <div class="panel-heading">
      All Comments...
    </div>
    <div class="panel-body">
      <%= render @comment %>
    </div>
  </div>
</div>
